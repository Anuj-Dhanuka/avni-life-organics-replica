<style>
    .auch-video {
        width: 100%;
        height: 60vh;
        object-fit: cover;
    }

    .auch-video-container {
        position: relative;
    }

    .auch-heading-container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%); 
        
    }

    .auch-heading {
        color: #ffffff;
    }
</style>

<div>
    <div class="auch-video-container">
        {{ section.settings.video_settings |  video_tag: autoplay: true, class: 'auch-video' }}
        <div class="auch-heading-container">
            <h1 class="auch-heading">ABOUT US</h1>
        </div>
    </div>
</div>


{% schema %}
  {
    "name": "about us header",
    "settings": [
      {
        "type": "video",
        "id": "video_settings",
        "label": "upload a video"
      }
    ],
    "presets": [
      {
        "name": "about-us-custom-header"
      }
    ]
  }
{% endschema %}